include mixins/functions

doctype
html(lang="es")
    head
        include includes/head.pug


    body#page-home.theme-dark.page-header-textura

        header#CursoPresentacion.curso-presentacion.page-header
            .page-textura
                .container

                    include includes/page-home_topbar.pug

                    +pageHeader("Tema", "assets/images/header/header_media.svg", "")   

        section#ResultadosAprendizaje.curso-resultados.section.bg-base-light

            .container

                include includes/page-home_resultados.pug  

        section#IndiceTematico.curso-indice-tematico.section

            .container

                h2 Desarrollo de <br>contenidos
                .brand-line-primary

                .row.justify-content-center
                    .col-12.col-sm-10
                        .card.wow.flipInX(data-wow-delay=".4s")
                            .card-body
                                ul.list-group.list-group-flush.list.my-n3.nav-temas
                                    +navTemaItem('1', 'Política Nacional en Seguridad Alimentaria y Nutricional (SAN)', 'main.html#page/tema-1/')
                                    +navTemaItem('2', 'Derecho Humano a la alimentación como nuevo enfoque de la Política SAN', 'main.html#page/tema-2/')
                                    +navTemaItem('3', 'Situación nutricional en Colombia', 'main.html#page/tema-3/')
                                    +navTemaItem('4', 'Política de Estado para el Desarrollo Integral de la primera infancia de cero a siempre', 'main.html#page/tema-4/')
                                    +navTemaItem('5', 'Política de Estado para el Desarrollo Integral de la primera infancia de cero a siempre', 'main.html#page/tema-4/')
                                    +navTemaItem('6', 'Ruta integral de atención para la promoción y mantenimiento de la salud', 'main.html#page/tema-4/')
                                    +navTemaItem('glosario', 'Glosario', '#glosario')
                                    +navTemaItem('complementario', 'Material complementario', '#anexos')
                                    +navTemaItem('referencias', 'Referencias bibliográficas', '#referencias')


        section#mainContent         

            #tema-1
                include pages/tema-1.pug
            #tema-2
                include pages/tema-2.pug
            #tema-3
                include pages/tema-3.pug
            #tema-4
                include pages/tema-4.pug
            #tema-5
                include pages/tema-5.pug
            #tema-6
                include pages/tema-6.pug                                
            #glosario
                include pages/glosario.pug
            #anexos
                include pages/material-complementario.pug
            #referencias
                include pages/referencias.pug


        +creditosFooter("assets/images/logos/senaLogo.svg")


        a.scroll-to-top-btn
            .fa.fa-angle-up.fa-2x

        script(src="assets/js/vendor.js")
        script(src="js/local.js")