mixin pageHeader(tituloTema, srcImagen, pagina)
    .curso-portada

        .row.align-items-end

            .col-12.col-lg-6

                .curso-container

                    h3#curso-titulo-componente.curso-subtitulo.text-color-3.text-white TECNOLOGÍA GESTIÓN CONTABLE Y DE INFORMACIÓN FINANCIERA
                    h1#curso-titulo-tema.curso-titulo Fundamentos de matemáticas financieras

                    .brand-line-primary

                    if pagina == 'main'

                        .keywords
                            span.badge.badge-pill.badge-brand-light.bg-brand-color-1.mr-2 Matemáticas financieras
                            span.badge.badge-pill.badge-brand-light.bg-brand-color-2.mr-2 Interés
                            span.badge.badge-pill.badge-brand-light.mr-2 Valor actual


                        .barra-dots.mt-5
                            img.img-fluid(src='assets/images/header/icon_dots.svg', alt='alt')

                    else 
                        p.curso-descripcion En este componente formativo se desarrollan los temas relacionados con la fundamentación y aplicación de las matemáticas financieras en el sector productivo, se analiza la clasificación de las tasas de interés, el valor del dinero en el tiempo, equivalencia de tasas, tablas de amortización y alternativas de inversión como lo son el Valor Presente Neto (VPN) y Tasa Interna de Retorno (TIR).

                        //p.curso-descripcion Cabe resaltar que el aprendiz se encuentra en la capacidad de reconocer los procesos para la formalización de empresas en Colombia, observando las obligaciones comerciales, laborales, financieras y tributarias inherentes al desarrollo del objeto social de una organización económica. De allí la importancia de analizar la normatividad establecida en el Código de Comercio, el Estatuto Tributario y el marco normativo de Normas Internacionales de Información Financiera (NIIF), con el fin de emitir informes sólidos a los usuarios de la información financiera, que reflejen la realidad de la empresa y contribuyan a la adecuada toma de decisiones. 

                        //p.curso-descripcion El aprendiz podrá identificar los elementos conceptuales relacionados con la atención integral de la primera infancia y nutrición materno infantil desde el sector salud. 
          
                    if pagina == 'home'
                        a.curso-btn-iniciar.btn.btn-light(href="main.html").mb-4
                            span Iniciar curso


            .col-12.col-lg-6.text-center
                .d-none.d-lg-block
                    img(src= srcImagen).curso-imagen


mixin referenciaItem(referencia, enlace, tituloenlace="")
    p= referencia
        if tituloenlace != ""
            a(href= enlace, target="_blank").ml-2= tituloenlace
        else if enlace != ""
            a(href= enlace, target="_blank").ml-2= enlace
    hr



mixin navTemaItem(numero, titulo, ruta)
    li.list-group-item.nav-tema-item
        .row.align-items-center
            if numero == 'play'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-play
            else if numero == 'question'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-question
            else if numero == 'text'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-file-text-o
            else if numero == 'glosario'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-sort-alpha-asc
            else if numero == 'complementario'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-folder-open
            else if numero == 'referencias'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-book
            else
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold= numero

            .col.ml-n2
                span.nav-tema-item__titulo 
                    a(href= ruta)= titulo
            .col-auto                                            
                a(href= ruta).btn.btn-light.nav-tema-item__btn
                    | Ver más
    
    
